<h1>Minesweeper Boards</h1>

<%= link_to "Generate Board", new_board_path, class: "btn btn-primary" %>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @boards.each do |board| %>
        <tr>
            <td><%= board.name %></td>
            <td><%= board.email %></td>
            <td><%= board.created_at %></td>
            <td>
                <%= link_to "Show", board_path(board), class: "btn btn-secondary" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>